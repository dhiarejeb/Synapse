          }
        }
      },
      "ChangePasswordRequest": {
        "type": "object",
        "properties": {
          "currentPassword": {
            "type": "string"
          },
          "newPassword": {
            "type": "string"
          },
          "confirmNewPassword": {
            "type": "string"
          }
        }
      },
      "CreateLinkRequest": {
        "required": [
          "fromNoteId",
          "toNoteId"
        ],
        "type": "object",
        "properties": {
          "fromNoteId": {
            "type": "string"
          },
          "toNoteId": {
            "type": "string"
          }
        }
      },
      "LinkResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "boardId": {
            "type": "string"
          },
          "fromNoteId": {
            "type": "string"
          },
          "toNoteId": {
            "type": "string"
          },
          "createdDate": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "RegistrationRequest": {
        "required": [
          "confirmPassword",
          "email",
          "firstName",
          "lastName",
          "password"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "maxLength": 50,
            "minLength": 1,
            "pattern": "^[\\p{L} '-]+$",
            "type": "string",
            "example": "John"
          },
          "lastName": {
            "maxLength": 50,
            "minLength": 1,
            "pattern": "^[\\p{L} '-]+$",
            "type": "string",
            "example": "Doe"
          },
          "email": {
            "type": "string",
            "example": "john@mail.com"
          },
          "password": {
            "maxLength": 72,
            "minLength": 8,
            "pattern": "^(?=.*[A-Z])(?=.*[a-z])(?=.*\\d)(?=.*\\W).*$",
            "type": "string",
            "example": "pAssword1!_"
          },
          "confirmPassword": {
            "maxLength": 72,
            "minLength": 8,
            "type": "string",
            "example": "pAssword1!_"
          }
        }
      },
      "RefreshRequest": {
        "type": "object",
        "properties": {
          "refreshToken": {
            "type": "string"
          }
        }
      },
      "AuthenticationResponse": {
        "type": "object",
        "properties": {
          "access_token": {
            "type": "string"
          },
          "refresh_token": {
            "type": "string"
          },
          "token_type": {
            "type": "string"
          }
        }
      },
      "AuthenticationRequest": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "example": "john@mail.com"
          },
          "password": {
            "type": "string",
            "example": "pAssword1!_"
          }
        }
      },
      "ActivationRequest": {
        "required": [
